
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
   </thead>

<tbody>
<% @posts.each do |post| %>
  <tr>
    <td>
      <%= link_to post.title , "/posts/#{post.id}" %></td>
    <td><%= link_to post.body , "/posts/#{post.id}" %></td>
    <td><%= link_to "show" , post_path(post) %></td>
    <td><%= link_to "edit" , edit_post_path(post) %></td>
    <td><%= link_to "Delete" , post_path(post), method: :delete , data: {confirm: '削除してもよいでしょうか？'}%></td>
</tbody>
<% end %>

<!-- <新規投稿フォームの部分 -->
<h2>新規投稿</h2>
<%= form_for(@post) do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>
    <h4>本文</h4>
    <%= f.text_area :body %>
    <%= f.submit '投稿' %>
 
<% end %>